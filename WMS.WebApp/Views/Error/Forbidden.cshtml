@model ErrorViewModel
@{
    ViewData["Title"] = "403";
    ViewData["subTitle"] = "403";
    Layout = "_Layout";
}
<div class="card basic-data-table border-0 overflow-hidden">
    <div class="card-body py-10 lg:py-[60px] xl:py-[80px] px-8 text-center">
        <h1 class="text-6xl font-light mb-4 text-neutral-600 dark:text-neutral-300">🔒</h1>
        <h2 class="text-6xl font-light mb-4 text-neutral-600 dark:text-neutral-300">403</h2>
        <h6 class="mb-4">Forbidden!</h6>
        <p class="text-secondary-light">Access denied. You do not have permission to view this page.</p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary-600 rounded-lg px-5 py-[11px] mt-10">Back to Home</a>
    </div>
</div>