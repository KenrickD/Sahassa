@model WMS.WebApp.Models.Products.ProductListViewModel

@{
    ViewData["Title"] = "Products";
    ViewData["subTitle"] = "Product Management";
}

<div class="grid grid-cols-12">
    <div class="col-span-12">
        <div class="card border-0 overflow-hidden">
            <div class="card-header flex items-center justify-between">
                <h6 class="card-title mb-0 text-lg">Product List</h6>
                <div class="flex items-center gap-2">
                    <!-- Download Template Button -->
                    <a href="@Url.Action("DownloadTemplate", "Product")" asp-authorize-permission="Product.Write"
                       class="btn bg-blue-600 hover:bg-blue-700 text-white text-sm btn-sm px-3 py-3 rounded-lg flex items-center gap-2"
                       title="Download Import Template">
                        <iconify-icon icon="solar:download-outline" class="icon text-xl line-height-1"></iconify-icon>
                        Template
                    </a>

                    <!-- Import Products Button -->
                    <a asp-action="Import" asp-controller="Product" asp-authorize-permission="Product.Write"
                       class="btn btn-primary text-sm btn-sm px-3 py-3 rounded-lg flex items-center gap-2"
                       title="Import Products">
                        <iconify-icon icon="solar:upload-outline" class="icon text-xl line-height-1"></iconify-icon>
                        Import
                    </a>

                    <!-- Export Products Button -->
                    <a href="@Url.Action("ExportProducts", "Product")"
                       class="btn bg-purple-600 hover:bg-purple-700 text-white text-sm btn-sm px-3 py-3 rounded-lg flex items-center gap-2"
                       title="Export Products">
                        <iconify-icon icon="solar:export-outline" class="icon text-xl line-height-1"></iconify-icon>
                        Export
                    </a>

                    <!-- Add Product Button -->
                    <a asp-action="Create" asp-controller="Product" asp-authorize-permission="Product.Write"
                       class="btn btn-primary text-sm btn-sm px-3 py-3 rounded-lg flex items-center gap-2">
                        <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
                        Add Product
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="products-table" class="border border-neutral-200 dark:border-neutral-600 rounded-lg border-separate">
                    <thead>
                        <tr>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="form-check style-check flex items-center">
                                    <input class="form-check-input" id="select-all" type="checkbox">
                                    <label class="ms-2 form-check-label" for="select-all">
                                        ID
                                    </label>
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Client
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Product Name
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    SKU
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Type
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Category
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2" title="Unit of Measure">
                                    UOM
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Status
                                </div>
                            </th>
                            <th scope="col" class="text-neutral-800 dark:text-white">
                                <div class="flex items-center gap-2">
                                    Actions
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- DataTables will populate this -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include the external script file -->
    <script src="~/js/pages/Products/list.js" asp-append-version="true"></script>
}