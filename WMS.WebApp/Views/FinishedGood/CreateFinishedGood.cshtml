@model WMS.Domain.DTOs.GIV_FinishedGood.FinishedGoodCreateWebDto

@{
    ViewData["Title"] = "Create Finished Good";
}

@Html.AntiForgeryToken()

<div class="card p-4">
    <h4 class="mb-3">Create Finished Good</h4>

    <form asp-action="Create" asp-controller="FinishedGood" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="SKU" class="form-label">SKU</label>
            <input asp-for="SKU" class="form-control" />
            <span asp-validation-for="SKU" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="DataTable" asp-controller="FinishedGood" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
